@model WebApplication1.Models.RegisterModel

@{
    Layout = null;
}
            <!DOCTYPE html>

            <html>
            <head>
                <meta name="viewport" content="width=device-width" />
                <title>Register</title>
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
                <link href="~/Asset/styles/CSSRegister.css" rel="stylesheet">
            </head>
            <body>
                <div class="content">
                    <section class="vh-100 bg-image"
                             style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
                        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
                            <div class="container h-100">
                                <div class="row d-flex justify-content-center align-items-center h-100">
                                    
                                      
                                    
                                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                                        <div class="card" style="border-radius: 15px;">
                                            <div class="card-body p-5">
                                                <h2 class="text-uppercase text-center mb-5">Create an account</h2>
                                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horzontali", role = "form" }))
                                                {
                                                    @Html.AntiForgeryToken()


                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <div class="row">
                                                        @if (ViewBag.Succsess != null)
                                                        {
                                                            <div class="alert alert-success">@ViewBag.Succsess</div>
                                                        }
                                                    </div>

                                                    <div class="form-outline mb-4">
                                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-lg", type = "text" })
                                                        @Html.LabelFor(m => m.UserName, new { @class = "form-label" })

                                                    </div>
                                                    <div class="form-outline mb-4">
                                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", type = "password" })
                                                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })

                                                    </div>
                                                    <div class="form-outline mb-4">
                                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg", type = "password" })
                                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })

                                                    </div>
                                                    <div class="form-outline mb-4">
                                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", type = "text" })
                                                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })

                                                    </div>
                                                    <div class="form-outline mb-4">
                                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control form-control-lg", type = "text" })
                                                        @Html.LabelFor(m => m.Phone, new { @class = "form-label" })

                                                    </div> <div class="form-outline mb-4">
                                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control form-control-lg", type = "text" })
                                                        @Html.LabelFor(m => m.Address, new { @class = "form-label" })

                                                    </div>
                                                    <div class="form-outline mb-4">
                                                        @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control form-control-lg", type = "text" })
                                                        @Html.LabelFor(m => m.Fullname, new { @class = "form-label" })

                                                    </div>
                                                    <div class="form-outline mb-4">
                                                        @Html.EditorFor(m => m.isAdmin, new { @class = "form-control form-control-lg", type = "text" })
                                                        @Html.LabelFor(m => m.isAdmin, new { @class = "form-label" })

                                                    </div>


                                                    <div class="form-check d-flex justify-content-center mb-5">
                                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                                                        <label class="form-check-label" for="form2Example3g">
                                                            I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                                                        </label>
                                                    </div>

                                                    <div class="d-flex justify-content-center">
                                                        <input type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="Register" />

                                                    </div>

                                                    <p class="text-center text-muted mt-5 mb-0">
                                                        Have already an account? <a href="@Html.Action("Login","Account")"
                                                                                    class="fw-bold text-body"><u>Login here</u></a>
                                                    </p>

                                                }

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </body>
        </html>

