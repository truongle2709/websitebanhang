
@model WebApplication1.Areas.Admin.Model.LoginModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Login 04</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Areas/Admin/AssetAdmin/AssetLogin/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Login #04</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="img" style="background-image: url(/Areas/Admin/AssetAdmin/AssetLogin/images/bg-1.jpg);">
                        </div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Sign In</h3>
                                </div>
                                <div class="w-100">
                                    <p class="social-media d-flex justify-content-end">
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                    </p>
                                </div>
                            </div>
                            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                            {
                                @Html.ValidationSummary(false,"","error")
                                <div class="input-group mb-3">
                                    <label class="label" for="name">Username</label>
                                    @Html.TextBoxFor(Model => Model.username, new { @class = "form- Control", @autoforcus = "autofocus" , @placeholder = "Username",@type="text" })
                                </div>
                                <div class="input-group mb-3">
                                    <label class="label" for="password">Password</label>
                                    @Html.PasswordFor(Model => Model.password, new { @class = "form- Control", @placeholder = "Password" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-outline-success">Sign In</button>
                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-50 text-left">
                                        <label class="checkbox-wrap checkbox-primary mb-0">
                                            Remember Me
                                            @Html.CheckBoxFor(Model => Model.remember)
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="w-50 text-md-right">
                                        <a href="#">Forgot Password</a>
                                    </div>
                                </div>
                            }


                            <button type="submit" class="btn btn-outline-success"> Create new account</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Areas/Admin/AssetAdmin/AssetLogin/js/jquery.min.js"></script>
    <script src="~/Areas/Admin/AssetAdmin/AssetLogin/js/popper.js"></script>
    <script src="~/Areas/Admin/AssetAdmin/AssetLogin/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/AssetAdmin/AssetLogin/js/main.js"></script>

</body>
</html>

